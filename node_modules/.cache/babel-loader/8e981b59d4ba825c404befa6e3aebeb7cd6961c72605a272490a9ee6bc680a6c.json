{"ast":null,"code":"import { mapState, mapMutations } from 'vuex';\nimport { ref, onMounted, onBeforeUnmount, watch } from 'vue';\nexport default {\n  setup() {\n    const screenWidth = ref(window.innerWidth);\n    const showDropdown = ref(false);\n    const handleResize = () => {\n      screenWidth.value = window.innerWidth;\n    };\n    onMounted(() => {\n      handleResize();\n      window.addEventListener('resize', handleResize);\n    });\n    onBeforeUnmount(() => {\n      window.removeEventListener('resize', handleResize);\n    });\n    watch(screenWidth, newWidth => {\n      if (newWidth <= 1527 && newWidth >= 1311) {\n        showDropdown.value = false;\n      } else if (newWidth < 1311 && newWidth >= 768) {\n        showDropdown.value = true;\n      } else {\n        showDropdown.value = false;\n      }\n    });\n    const store = useStore();\n    const name = computed({\n      get: () => store.state.studentInformation.name,\n      set: value => store.commit('setName', value)\n    });\n    const score = computed({\n      get: () => store.state.studentInformation.score,\n      set: value => store.commit('setScore', value)\n    });\n    const studentId = computed({\n      get: () => store.state.studentInformation.studentId,\n      set: value => store.commit('setStudentId', value)\n    });\n    const subject = computed({\n      get: () => store.state.studentInformation.subject,\n      set: value => store.commit('setSubject', value)\n    });\n    const setCandidate = () => {\n      alert('报考人信息输入成功');\n    };\n    const createArchive = () => {\n      if (!name.value) {\n        alert('请先输入考生信息');\n        return;\n      }\n      store.commit('addTableName', name.value);\n      alert('报考档案创建成功');\n    };\n    return {\n      screenWidth,\n      showDropdown,\n      name,\n      score,\n      studentId,\n      subject,\n      setCandidate,\n      createArchive\n    };\n  }\n};","map":{"version":3,"names":["mapState","mapMutations","ref","onMounted","onBeforeUnmount","watch","setup","screenWidth","window","innerWidth","showDropdown","handleResize","value","addEventListener","removeEventListener","newWidth","store","useStore","name","computed","get","state","studentInformation","set","commit","score","studentId","subject","setCandidate","alert","createArchive"],"sources":["/Users/jiangxingnan/Desktop/gao_kao_system/src/components/AppHeader.vue"],"sourcesContent":["<template>\n  <a-layout-header class=\"app-header\">\n    <div class=\"header-content\">\n      <div>\n        <a-row :gutter=\"16\" align=\"middle\" class=\"header-row\">\n          <a-col>考生姓名</a-col>\n          <a-col>\n            <input v-model=\"name\" type=\"text\" class=\"styled-input\">\n          </a-col>\n\n          <!-- Dropdown for narrow screens -->\n          <template v-if=\"showDropdown\">\n            <a-col>\n              <a-dropdown trigger=\"click\">\n                <template #default>\n                  <a-button icon=\"ellipsis\" />\n                </template>\n                <template #overlay>\n                  <a-menu>\n                    <a-menu-item key=\"score\">\n                      <span>考生分数</span>\n                      <input v-model=\"score\" type=\"text\" class=\"styled-input dropdown-input\" />\n                    </a-menu-item>\n                    <a-menu-item key=\"studentId\">\n                      <span>考生考号</span>\n                      <input v-model=\"studentId\" type=\"text\" class=\"styled-input dropdown-input\" />\n                    </a-menu-item>\n                    <a-menu-item key=\"subject\">\n                      <span>考生位次</span>\n                      <input v-model=\"subject\" type=\"text\" class=\"styled-input dropdown-input\" />\n                    </a-menu-item>\n                  </a-menu>\n                </template>\n              </a-dropdown>\n            </a-col>\n          </template>\n\n          <!-- Full inputs for wider screens -->\n          <template v-else>\n            <a-col>考生分数</a-col>\n            <a-col>\n              <input v-model=\"score\" type=\"text\" class=\"styled-input\">\n            </a-col>\n            <a-col>考生考号</a-col>\n            <a-col>\n              <input v-model=\"studentId\" type=\"text\" class=\"styled-input\">\n            </a-col>\n            <a-col>考生位次</a-col>\n            <a-col>\n              <input v-model=\"subject\" type=\"text\" class=\"styled-input\">\n            </a-col>\n          </template>\n\n          <!-- Compact info for wider screens -->\n          <a-col v-if=\"!showDropdown && screenWidth >= 1528\" class=\"styled-col compact-col\">\n            当前报考人: {{ name }} - {{ score }} - {{ studentId }} - {{ subject }}\n          </a-col>\n        </a-row>\n      </div>\n      <div>\n        <a-space size=\"large\" class=\"header-row\">\n          <a-button type=\"primary\" @click=\"setCandidate\">设定报考人</a-button>\n          <a-button type=\"primary\" @click=\"createArchive\">创建报考档案</a-button>\n        </a-space>\n      </div>\n    </div>\n  </a-layout-header>\n</template>\n\n<script>\nimport { mapState, mapMutations } from 'vuex';\nimport { ref, onMounted, onBeforeUnmount, watch } from 'vue';\n\nexport default {\n  setup() {\n    const screenWidth = ref(window.innerWidth);\n    const showDropdown = ref(false);\n\n    const handleResize = () => {\n      screenWidth.value = window.innerWidth;\n    };\n\n    onMounted(() => {\n      handleResize();\n      window.addEventListener('resize', handleResize);\n    });\n\n    onBeforeUnmount(() => {\n      window.removeEventListener('resize', handleResize);\n    });\n\n    watch(screenWidth, (newWidth) => {\n      if (newWidth <= 1527 && newWidth >= 1311) {\n        showDropdown.value = false;\n      } else if (newWidth < 1311 && newWidth >= 768) {\n        showDropdown.value = true;\n      } else {\n        showDropdown.value = false;\n      }\n    });\n\n    const store = useStore();\n    const name = computed({\n      get: () => store.state.studentInformation.name,\n      set: value => store.commit('setName', value)\n    });\n    const score = computed({\n      get: () => store.state.studentInformation.score,\n      set: value => store.commit('setScore', value)\n    });\n    const studentId = computed({\n      get: () => store.state.studentInformation.studentId,\n      set: value => store.commit('setStudentId', value)\n    });\n    const subject = computed({\n      get: () => store.state.studentInformation.subject,\n      set: value => store.commit('setSubject', value)\n    });\n\n    const setCandidate = () => {\n      alert('报考人信息输入成功');\n    };\n\n    const createArchive = () => {\n      if (!name.value) {\n        alert('请先输入考生信息');\n        return;\n      }\n      store.commit('addTableName', name.value);\n      alert('报考档案创建成功');\n    };\n\n    return {\n      screenWidth,\n      showDropdown,\n      name,\n      score,\n      studentId,\n      subject,\n      setCandidate,\n      createArchive,\n    };\n  }\n};\n</script>\n\n<style scoped>\n.app-header {\n  border-bottom: 1px solid #ddd;\n  background-color: #f5f5f5; /* Ensure light background color */\n  transition: margin-left 0.2s, width 0.2s;\n}\n\n.header-content {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  width: 100%;\n}\n\n.styled-input {\n  width: 100px;\n  height: 40px;\n  padding: 8px;\n  font-size: 0.8rem;\n  border: 1px solid #ccc;\n  border-radius: 4px;\n  transition: border-color 0.3s ease, box-shadow 0.3s ease;\n}\n\n.styled-input:hover {\n  border-color: #007bff;\n}\n\n.styled-input:focus {\n  border-color: #007bff;\n  box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);\n  outline: none;\n}\n\n.styled-input::placeholder {\n  color: #aaa;\n  font-style: italic;\n}\n\n.styled-col {\n  border: 1px solid #007bff;\n  border-radius: 8px;\n  font-size: 0.8rem;\n  color: #333;\n  box-shadow: 0 4px 8px rgba(0, 123, 255, 0.2);\n  transition: transform 0.3s ease, box-shadow 0.3s ease;\n  margin-left: 20px;\n}\n\n.styled-col:hover {\n  transform: translateY(-2px);\n  box-shadow: 0 6px 12px rgba(0, 123, 255, 0.3);\n}\n\n.styled-col span {\n  font-weight: bold;\n  color: #007bff;\n}\n\n.compact-col {\n  padding: 4px;\n  font-size: 0.8rem;\n  line-height: 2;\n}\n\n.header-row {\n  min-width: 1500px; /* Adjust based on your content width */\n}\n\n.button-container {\n  display: flex;\n  justify-content: flex-end;\n  flex-grow: 1;\n  margin-right: 0; /* Default to 0, adjusted dynamically */\n}\n\n/* Media queries for different screen sizes */\n@media (max-width: 1527px) and (min-width: 1311px) {\n  .compact-col {\n    display: none;\n  }\n}\n\n@media (max-width: 1311px) and (min-width: 768px) {\n  .dropdown-input {\n    width: 100%;\n  }\n  .header-row > .compact-col {\n    display: none;\n  }\n  .header-row > a-col {\n    display: none;\n  }\n}\n\n@media (max-width: 768px) {\n  .header-content {\n    display: none;\n  }\n}\n</style>\n"],"mappings":"AAsEA,SAASA,QAAQ,EAAEC,YAAW,QAAS,MAAM;AAC7C,SAASC,GAAG,EAAEC,SAAS,EAAEC,eAAe,EAAEC,KAAI,QAAS,KAAK;AAE5D,eAAe;EACbC,KAAKA,CAAA,EAAG;IACN,MAAMC,WAAU,GAAIL,GAAG,CAACM,MAAM,CAACC,UAAU,CAAC;IAC1C,MAAMC,YAAW,GAAIR,GAAG,CAAC,KAAK,CAAC;IAE/B,MAAMS,YAAW,GAAIA,CAAA,KAAM;MACzBJ,WAAW,CAACK,KAAI,GAAIJ,MAAM,CAACC,UAAU;IACvC,CAAC;IAEDN,SAAS,CAAC,MAAM;MACdQ,YAAY,CAAC,CAAC;MACdH,MAAM,CAACK,gBAAgB,CAAC,QAAQ,EAAEF,YAAY,CAAC;IACjD,CAAC,CAAC;IAEFP,eAAe,CAAC,MAAM;MACpBI,MAAM,CAACM,mBAAmB,CAAC,QAAQ,EAAEH,YAAY,CAAC;IACpD,CAAC,CAAC;IAEFN,KAAK,CAACE,WAAW,EAAGQ,QAAQ,IAAK;MAC/B,IAAIA,QAAO,IAAK,IAAG,IAAKA,QAAO,IAAK,IAAI,EAAE;QACxCL,YAAY,CAACE,KAAI,GAAI,KAAK;MAC5B,OAAO,IAAIG,QAAO,GAAI,IAAG,IAAKA,QAAO,IAAK,GAAG,EAAE;QAC7CL,YAAY,CAACE,KAAI,GAAI,IAAI;MAC3B,OAAO;QACLF,YAAY,CAACE,KAAI,GAAI,KAAK;MAC5B;IACF,CAAC,CAAC;IAEF,MAAMI,KAAI,GAAIC,QAAQ,CAAC,CAAC;IACxB,MAAMC,IAAG,GAAIC,QAAQ,CAAC;MACpBC,GAAG,EAAEA,CAAA,KAAMJ,KAAK,CAACK,KAAK,CAACC,kBAAkB,CAACJ,IAAI;MAC9CK,GAAG,EAAEX,KAAI,IAAKI,KAAK,CAACQ,MAAM,CAAC,SAAS,EAAEZ,KAAK;IAC7C,CAAC,CAAC;IACF,MAAMa,KAAI,GAAIN,QAAQ,CAAC;MACrBC,GAAG,